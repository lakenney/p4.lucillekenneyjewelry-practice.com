
/*-------------------------------------------------------------------------------------------------
Listener calculator
-------------------------------------------------------------------------------------------------*/	

$('button').click(calculate);

$('input,select').change(calculate);

function calculate() {
	
	var budget = $('#budget').val();
	var rooms = $('#rooms.count').val();
	var service = $('input[name-services];checked');
	var total = 0;

	services.each(function() {

		var price = $(this).val();
		//consle.log(amount);

		var amount = price * rooms;

		total = total + amount;

	});
}

